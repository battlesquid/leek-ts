{
	"name": "leek",
	"version": "1.0.0",
	"description": "general purpose bot",
	"license": "GPL-3.0-only",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"start": "node dist/index.js",
		"dev": "pnpm start | pino-pretty",
		"build": "tsc",
		"build:clean": "pnpm clean && pnpm build",
		"clean": "rm -rf dist",
		"clean:all": "pnpm clean && rm -rf node_modules",
		"neat": "biome check .",
		"neat:fix": "biome check . --write",
		"run_migrate": "node dist/migrate.js",
		"vault:remove-previous": "rm -rf .env.previous .env.production.previous",
		"vault:pull": "dotenv-vault pull && dotenv-vault pull production && pnpm vault:remove-previous",
		"vault:push": "dotenv-vault push && dotenv-vault push production && pnpm vault:pull"
	},
	"dependencies": {
		"@sapphire/decorators": "^6.1.0",
		"@sapphire/discord.js-utilities": "^7.3.0",
		"@sapphire/framework": "^5.2.1",
		"@sapphire/plugin-subcommands": "^7.0.1",
		"@sapphire/utilities": "^3.16.2",
		"discord.js": "^14.15.3",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.2",
		"emoji-regex": "^10.3.0",
		"ms": "^2.1.3",
		"pg": "^8.12.0",
		"pino": "^9.7.0",
		"pino-loki": "^2.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@sapphire/pieces": "^4.4.1",
		"@types/ms": "^2.1.0",
		"@types/node": "^24.0.10",
		"@types/pg": "^8.11.6",
		"dotenv-vault": "^1.26.2",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.0.11",
		"lint-staged": "^16.1.2",
		"pino-pretty": "^13.0.0",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"**/*": "pnpm neat:fix"
	},
	"volta": {
		"pnpm": "10.13.1",
		"node": "24.3.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
